#include <iostream>
using namespace std;
int main()
{
	//배열 생성
	int list[10] = { 15,11,1,3,8 };
	//위치값
	int k;

	//값 비교해 삽입
	for (int i = 1; i < 5; i++) {
		int j, k;
		//첫번째 요소 뒤 요소를 스택에 저장
		k = list[i];
		//뒷 요소를 앞의 있는 요소들과 계속 비교해나가기 위해 j가 감소되고 j=j-1을 해서 k의 앞 인덱스값과 비교할 수 있게 함
		for (j = i - 1; j >= 0&&list[j] > k; j--)//j가 0보다 크거나 같고,0번째 요소가 1번째 요소보다 크다면
		{
			//뒷 요소에 앞요소의 값을 저장함 즉 한칸씩 이동함
			//재밌는게 j+1인덱스 값에 j인덱스 값을 덮어쓰기했지만 j+1의 값은 k이고 따로 스택에 저장되었기 때문에
			//  한 값이 다른 값을 덮어씌우지 않음
			list[j + 1] = list[j];
		}
		//그리고 j는 -1이 되었으니 +1을 해서 0번째 요소에 두번째 요소를 저장
		list[j + 1] = k;



	}
	cout << "정렬된 리스트 :";
	for (int i = 0; i < 5; i++) {
		cout << list[i] << " ";
	}
	//1.값 버퍼에 저장


}
